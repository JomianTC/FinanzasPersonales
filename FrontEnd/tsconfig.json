{
	"exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"],
	"compilerOptions": {
		"target": "ES2016",
		"module": "System",
		"outDir": "./dist",
		"esModuleInterop": true,
		"strict": true,
		"removeComments": true,
		"noImplicitAny": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"types": ["vite/client"]
	},
	"include": ["src/**/*.ts", "public/**/*.ts"]
}